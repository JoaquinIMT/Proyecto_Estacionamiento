<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:orientation="vertical">
    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp" app:srcCompat="@drawable/bg_boton_redondo_azul"
            android:id="@+id/imagen_carro"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Chevrolet Aveo"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:id="@+id/marca_modelo"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" app:layout_constraintStart_toEndOf="@+id/imagen_carro"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView3"/>
    <TextView
            android:text="BFH 47  71"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:id="@+id/matricula"
            app:layout_constraintTop_toBottomOf="@+id/marca_modelo"
            app:layout_constraintStart_toEndOf="@+id/imagen_carro"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:textSize="30sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/textView3"/>
    <TextView
            android:text="Entrada:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp" android:textSize="18sp"/>
    <TextView
            android:text="12:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hora_entrada1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Salida:"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textSize="18sp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/hora_entrada1"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/textView3"/>
    <TextView
            android:text="12:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hora_entrada2"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="7dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
