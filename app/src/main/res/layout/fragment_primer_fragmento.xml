<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".PrimerFragmento">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <Button
                android:text="Entrada"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/nuevo_registro"
                android:background="@drawable/bg_boton_redondo_azul"
                android:textColor="?attr/colorBackgroundFloating"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/nuevo_registro">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">
                <ProgressBar
                        android:layout_width="250dp"
                        android:layout_height="250dp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        style="?android:progressBarStyleHorizontal"
                        android:progress="100"
                        android:rotation="-90"
                        android:progressDrawable="@drawable/circle"
                        android:id="@+id/progressBar"
                        app:layout_constraintHorizontal_bias="0.498"
                        tools:layout_conversion_absoluteHeight="300dp"
                        tools:layout_conversion_absoluteWidth="300dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="32dp"
                        android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                        android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
                <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/espacios"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="@+id/progressBar"
                        app:layout_constraintStart_toStartOf="@+id/progressBar"
                        app:layout_constraintTop_toTopOf="@+id/progressBar"
                        app:layout_constraintBottom_toBottomOf="@+id/progressBar"
                        tools:layout_conversion_absoluteHeight="32dp" tools:layout_editor_absoluteY="300dp"
                        tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="13dp"/>
                <TextView
                        android:text="Lugares disponibles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:textSize="30sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_conversion_absoluteHeight="41dp"
                        tools:layout_conversion_absoluteWidth="269dp" android:layout_marginTop="16dp"/>
                <TextView
                        android:text="Generales:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_circle_blue"
                        android:drawableLeft="@drawable/ic_circle_blue"
                        android:drawablePadding="10dp"
                        android:id="@+id/textView"
                        android:textSize="24sp"
                        tools:layout_conversion_absoluteHeight="32dp"
                        tools:layout_conversion_absoluteWidth="146dp"
                        android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/progressBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.43"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_generals"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        android:textSize="24sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
                        tools:layout_conversion_absoluteHeight="32dp"
                        tools:layout_conversion_absoluteWidth="0dp" android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:text="Especiales:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_circle_blue"
                        android:drawableLeft="@drawable/ic_circle_blue"
                        android:drawablePadding="10dp"
                        android:id="@+id/textespecial"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="@+id/textView"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        tools:layout_conversion_absoluteHeight="32dp"
                        tools:layout_conversion_absoluteWidth="154dp" android:layout_marginTop="8dp"
                        android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="1.0"
                        app:layout_constraintEnd_toEndOf="@+id/number_generals"
                        app:layout_constraintHorizontal_bias="0.0"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_especials"
                        android:textSize="24sp"
                        app:layout_constraintStart_toEndOf="@+id/textespecial"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textespecial"
                        android:visibility="gone" tools:layout_conversion_absoluteHeight="0dp"
                        tools:layout_conversion_absoluteWidth="0dp" android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>