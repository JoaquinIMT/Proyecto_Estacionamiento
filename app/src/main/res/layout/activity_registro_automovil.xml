<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistroAutomovil">


    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nuevo_registro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/imagen"
                    android:layout_width="105dp"
                    android:layout_height="76dp"
                    android:layout_marginStart="173dp"
                    android:layout_marginLeft="173dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.632"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/folio"
                    app:srcCompat="@android:color/darker_gray" />

            <EditText
                    android:id="@+id/matricula2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Matricula"
                    android:inputType="textCapCharacters"
                    android:maxLength="20"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/sahora"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:text="00:00"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/enhora"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/enhora"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.45" />

            <TextView
                    android:id="@+id/enhora"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:text="00:00"
                    android:textAlignment="center"
                    android:textSize="30sp"

                    app:layout_constraintBottom_toTopOf="@+id/switch1"
                    app:layout_constraintEnd_toStartOf="@+id/sahora"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toTopOf="@+id/enhora"
                    app:layout_constraintEnd_toEndOf="@+id/enhora"
                    app:layout_constraintStart_toStartOf="@+id/enhora"
                    app:layout_constraintTop_toBottomOf="@+id/folio"
                    app:srcCompat="@drawable/ic_access_time_blue" />

            <ImageView
                    android:id="@+id/reloj2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toTopOf="@+id/sahora"
                    app:layout_constraintEnd_toEndOf="@+id/sahora"
                    app:layout_constraintHorizontal_bias="0.415"
                    app:layout_constraintStart_toEndOf="@+id/enhora"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_access_time_red" />

            <AutoCompleteTextView
                    android:id="@+id/matricula"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:completionHint="Selecciona la marca"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Marca"
                    android:inputType="textCapSentences"
                    android:textSize="30sp"
                    android:maxLength="20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/matricula2"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.45" />

            <AutoCompleteTextView
                    android:id="@+id/modelo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Tipo"
                    android:inputType="textCapSentences"
                    android:textSize="30sp"
                    android:maxLength="20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/matricula2"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.45" />

            <AutoCompleteTextView
                    android:id="@+id/color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Color"
                    android:inputType="textCapSentences"
                    android:textSize="30sp"
                    android:maxLength="20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/modelo"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.45" />

            <EditText
                    android:id="@+id/folio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:enabled="false"
                    android:textSize="30sp"
                    android:maxLength="5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/color" />

            <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:text="Pensionado"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            <Button
                    android:id="@+id/btnCarro"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/carro"
                    android:clickable="false"
                    app:layout_constraintBottom_toTopOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="@+id/btnCamioneta"
                    app:layout_constraintHorizontal_bias="0.214"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/folio" />

            <Button
                    android:id="@+id/btnCamioneta"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="8dp"

                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/camioneta"
                    android:clickable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.877"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/btnCarro" />

            <ImageView
                    android:id="@+id/imagenCarro"
                    android:layout_width="105dp"
                    android:layout_height="76dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="@+id/btnCamioneta"
                    app:layout_constraintHorizontal_bias="0.219"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/folio"
                    app:srcCompat="@android:color/darker_gray" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
            android:text="Registrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nuevo_registro"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_boton_redondo_azul"
            android:textColor="?attr/colorBackgroundFloating"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/salida" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"/>

    <Button
            android:text="Salida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".65"
            android:id="@+id/salida" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:background="@drawable/bg_boton_redondo_rojo"
            android:textColor="?attr/colorBackgroundFloating" android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>