<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:orientation="vertical">
    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp" app:srcCompat="@drawable/bg_boton_redondo_azul"
            android:id="@+id/state_carro"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:visibility="visible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/folio2" app:layout_constraintEnd_toStartOf="@+id/textespecial"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/state_carro" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="36sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/textespecial"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/hora_entrada2"/>
    <TextView
            android:text="Entrada:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textespecial"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp" android:textSize="18sp"/>
    <TextView
            android:text="12:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hora_entrada1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/textespecial"
            android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="@+id/textespecial"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Salida:"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textSize="18sp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/hora_entrada1"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/textespecial"/>
    <TextView
            android:text="12:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hora_entrada2"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="7dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
